---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer/index.jsx';
import Nav from '../components/Nav/index.jsx';
import PortfolioPreview from '../components/PortfolioPreview/index.jsx';

const projects = (await Astro.glob('./project/**/*.md'))
	.filter(({ frontmatter }) => !!frontmatter.publishDate)
	.sort(
		(a, b) =>
			new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf()
	);
---

<html lang="en">
	<head>
		<MainHead
			title="All Projects | Kez &amp; Unicorns"
			description="Learn about Kez &amp; Unicorns most recent projects"
		/>
		<style lang="scss">
			.grid {
				display: grid;
				grid-gap: 3rem;
			}
		</style>
	</head>
	<body>
		<Nav />
		<div class="wrapper">
								<div class="heroImg mt4 mb4">
								<img
										width="1400"
										height="350"
										src="https://kezandunicorns.com/assets/top-banner.jpg"
								/>
							</div>
			<h1 class="title mt4 mb4">Some Projects</h1>
			<div class="grid">
				{projects.map((project) => <PortfolioPreview project={project} />)}
			</div>
		</div>
		<Footer />
	</body>
</html>
